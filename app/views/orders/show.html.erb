<p style="color: green"><%= notice %></p>

<table>
  <tbody>
    <tr>
      <td><b>Customer Email</b></td>
      <td><b>:</b></td>
      <td><b><%= @order.customer_email %></b></td>
    </tr>
    <tr>
      <td><b>Order Date</b></td>
      <td><b>:</b></td>
      <td><b><%= @order.created_at %></b></td>
    </tr>
    <tr>
      <td><b>Status</b></td>
      <td><b>:</b></td>
      <td><b><%= @order.status %></b></td>
    </tr>
  </tbody>
</table>

<br>

<table style="width: 40%; text-align: center;">
  <thead>
    <th>No</th>
    <th>Menu</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Sub total</th>
  </thead>
  <tbody>
    <% @menus.each_with_index do |menu, index| %>
      <% @order_detail = OrderDetail.find_by(order_id: @order.id, menu_id: menu.id) %>
        <tr>
          <td style="text-align: center;"><%= index + 1 %></td>
          <td><%= menu.name %></td>
          <td><%= @order_detail.menu_price %></td>
          <td style="text-align: center;"><%= @order_detail.quantity %></td>
          <td><%= @order_detail.sub_total %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<table>
  <tbody>
    <tr>
      <td><b>Total</b></td>
      <td><b>:</b></td>
      <td><b><%= @order.total %></b></td>
    </tr>
  </tbody>
</table>
      
<div>
  <%= link_to "Edit this order", edit_order_path(@order) %> |
  <%= link_to "Back to order", orders_path %>

  <%= button_to "Destroy this order", @order, method: :delete %>
</div>
